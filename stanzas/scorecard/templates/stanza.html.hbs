<div class="chart-wrapper">
  {{#each scorecards as |scorecard|}}
    <svg id="scorecardSvg" x="50%" class="scorecard-svg">
      <text id="scorecardText" x="50%" y="50%" text-anchor="middle">
        <tspan id="key" x="50%">
          {{scorecard.key}}
        </tspan>
        <tspan id="value" x="50%">
          {{scorecard.value}}
        </tspan>
      </text>
    </svg>
  {{/each}}
</div>